<Window x:Class="FloodIt.View.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloodIt.View"
        mc:Ignorable="d"
        Title="FloodIt!" Height="151" Width="550" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource FloodItGridBackground}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image HorizontalAlignment="Left" Height="64" Margin="20,20,0,0" VerticalAlignment="Top" Width="64" Source="{Binding ImageSource}"/>
                <TextBlock Style="{StaticResource FloodItTextBlock}" TextAlignment="Left" HorizontalAlignment="Left" Margin="20,41,0,0" Text="{Binding Message}" VerticalAlignment="Top" Height="32" Width="437"/>
            </StackPanel>
            <Button Style="{StaticResource FloodItButton}" Content="OK" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="506" Click="Button_Click" IsDefault="True" Height="27"/>
        </StackPanel>
    </Grid>
</Window>
