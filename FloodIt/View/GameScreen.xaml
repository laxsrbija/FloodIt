<Page x:Class="FloodIt.View.GameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FloodIt.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="432"
      Title="GameScreen">

    <Grid Style="{StaticResource FloodItGridBackground}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Height="30" Width="170" Margin="10, 10, 0, 10" Source="/FloodIt;component/Resources/logo.png" MouseDown="Button_Click" Cursor="Hand"/>
                <TextBlock Style="{StaticResource FloodItGameTextBlock}" Margin="5, 14, 0, 0" Text="{Binding GameInstance.Gameplay.Gametype}" Width="220" FontFamily="pack://application:,,,/Resources/#GothamCondensed" FontSize="20px"/>
            </StackPanel>
            <TextBlock Style="{StaticResource FloodItGameTextBlock}" Text="{Binding GameInstance.Gameplay.Scoreboard}" Margin="0, 10, 0, 20" HorizontalAlignment="Center" TextAlignment="Center" Width="400"/>
            <Canvas Name="GameCanvas" HorizontalAlignment="Left" Height="324" Margin="0" VerticalAlignment="Top" Width="340" MouseDown="Canvas_MouseDown" Background="White"/>
        </StackPanel>
    </Grid>
</Page>
