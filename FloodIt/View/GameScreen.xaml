<Page x:Class="FloodIt.View.GameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FloodIt.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameScreen">

    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="49,26,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Canvas Name="GameCanvas" HorizontalAlignment="Left" Height="324" Margin="62,72,0,0" VerticalAlignment="Top" Width="340" MouseDown="Canvas_MouseDown" Background="AntiqueWhite"/>
        <TextBlock HorizontalAlignment="Left" Height="33" Margin="144,26,0,0" TextWrapping="Wrap" Text="{Binding GameInstance.Gameplay.Gametype}" VerticalAlignment="Top" Width="203" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="33" Margin="384,26,0,0" TextWrapping="Wrap" Text="{Binding GameInstance.Gameplay.Scoreboard}" VerticalAlignment="Top" Width="258" TextAlignment="Center"/>

    </Grid>
</Page>
